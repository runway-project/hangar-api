{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
	"skipLibCheck": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "jsx": "preserve"
  },
  "include": [
    "src/*.ts",
	"src/entities/**/*",
	"src/middleware/**/*",
	"src/routers/**/*",
	"src/utils/**/*"
  ]
}
